USE sakila;
SHOW TABLES;
DESCRIBE movies;
DESCRIBE film;
DESCRIBE genres;
DESCRIBE genres_movies;
SELECT * FROM actor;
SELECT * FROM actor WHERE first_name = 'John';
SELECT * FROM actor WHERE last_name = 'Neeson';
SELECT * FROM actor WHERE actor_id % 10 = 0;
SELECT * FROM film WHERE description = 100;
SELECT * FROM film WHERE rating = 'R';
SELECT * FROM film WHERE rating != 'R';
-- SELECT * FROM film WHERE length < 48;
SELECT title, length FROM film ORDER BY length ASC LIMIT 10;
SELECT MAX(length) FROM film WHERE length != 0;
SELECT title, special_features FROM film WHERE special_features LIKE '%Deleted Scenes%';
SELECT last_name, COUNT(last_name) FROM actor GROUP BY last_name HAVING COUNT(last_name) = 1 ORDER BY last_name DESC;
SELECT last_name, COUNT(last_name) FROM actor GROUP BY last_name HAVING COUNT(last_name) > 1 ORDER BY last_name ASC;
SELECT MAX(first_name) FROM actor GROUP BY first_name HAVING COUNT(first_name) > 1;
SELECT title, release_year FROM film WHERE release_year != 0;
SELECT AVG(length) FROM film;
SELECT category, AVG(length) FROM film_list GROUP BY category;
SELECT title, description FROM film WHERE description LIKE '%Robot%';
SELECT title, release_year FROM film WHERE release_year = 2010;
SELECT title FROM film_list WHERE category = 'Horror';
SELECT first_name, last_name FROM actor WHERE actor_id = 2;
SELECT title, actors FROM film_list WHERE actors LIKE '%Fred Costner%';
SELECT COUNT(DISTINCT country) FROM country;
SELECT DISTINCT name FROM language ORDER BY name DESC; 
SELECT * FROM actor WHERE last_name LIKE '%son%' ORDER BY first_name ASC;
SELECT category, COUNT(title) FROM film_list GROUP BY category ORDER BY COUNT(title) DESC LIMIT 1;
